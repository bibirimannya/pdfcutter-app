/* 基本設定 */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    color: #333;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
}

/* ヘッダー - 中央揃え統一 */
header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
    padding: 3rem 0;
    margin-bottom: 3rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

header h1 {
    font-size: 2.8rem;
    font-weight: 300;
    margin: 0;
    letter-spacing: 1px;
}

/* メインコンテンツ - 中央揃え統一 */
main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    padding: 2rem 0;
}

.upload-section, .merge-section {
    background: white;
    border-radius: 15px;
    padding: 3rem 2rem;
    margin: 2rem auto;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    max-width: 600px;
    text-align: center;
    border: 1px solid #e1e5e9;
}

.upload-section h2, .merge-section h2 {
    color: #667eea;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
    font-weight: 400;
    text-align: center;
}

.upload-section p {
    color: #666;
    font-size: 1.1rem;
    margin-bottom: 2rem;
    text-align: center;
}

/* ボタンスタイル - 中央配置 */
.btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 15px 35px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-block;
    text-decoration: none;
    margin: 10px;
    box-shadow: 0 4px 15px rgba(102,126,234,0.2);
}

.btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102,126,234,0.3);
}

/* ファイルアップロード - 中央揃え */
.file-upload {
    border: 3px dashed #667eea;
    border-radius: 15px;
    padding: 3rem 2rem;
    text-align: center;
    transition: all 0.3s ease;
    margin: 2rem auto;
    background: #f8f9ff;
    max-width: 500px;
}

.file-upload:hover {
    border-color: #764ba2;
    background: linear-gradient(135deg, #f8f9ff 0%, #f0f2ff 100%);
    transform: translateY(-2px);
}

.file-upload input[type="file"] {
    margin: 1.5rem 0;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background: white;
    width: 100%;
    max-width: 300px;
}

/* フッター - 中央揃え統一 */
footer {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
    text-align: center;
    padding: 2rem 0;
    margin-top: auto;
    box-shadow: 0 -4px 20px rgba(0,0,0,0.1);
}

footer p {
    margin-bottom: 10px;
    font-size: 14px;
}

footer a {
    color: #87CEEB;
    text-decoration: none;
    margin: 0 15px;
    padding: 5px 10px;
    border-radius: 5px;
    transition: all 0.3s ease;
}

footer a:hover {
    background: rgba(135, 206, 235, 0.2);
    text-decoration: none;
}

/* Cookie同意バナー - 控えめで統一感のあるデザイン */
.cookie-banner {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    color: #333;
    padding: 20px 30px;
    border-radius: 15px;
    z-index: 9999;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    border: 1px solid #e1e5e9;
    max-width: 90%;
    text-align: center;
}

.cookie-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
}

.cookie-content p {
    margin: 0;
    font-size: 14px;
    color: #555;
}

.cookie-buttons {
    display: flex;
    gap: 10px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}

.btn-accept, .btn-decline {
    padding: 8px 16px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
    font-weight: 500;
    transition: all 0.2s ease;
}

.btn-accept {
    background: #4CAF50;
    color: white;
    box-shadow: 0 2px 10px rgba(76, 175, 80, 0.3);
}

.btn-accept:hover {
    background: #45a049;
    transform: translateY(-1px);
}

.btn-decline {
    background: #f44336;
    color: white;
    box-shadow: 0 2px 10px rgba(244, 67, 54, 0.3);
}

.btn-decline:hover {
    background: #da190b;
    transform: translateY(-1px);
}

.privacy-link {
    color: #667eea;
    text-decoration: none;
    font-size: 12px;
    padding: 5px 10px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

.privacy-link:hover {
    background: rgba(102, 126, 234, 0.1);
    text-decoration: none;
}

/* レスポンシブデザイン */
@media (max-width: 768px) {
    header h1 {
        font-size: 2.2rem;
    }
    
    header {
        padding: 2rem 0;
        margin-bottom: 2rem;
    }
    
    .upload-section, .merge-section {
        padding: 2rem 1rem;
        margin: 1rem auto;
    }
    
    .file-upload {
        padding: 2rem 1rem;
    }
    
    .cookie-banner {
        bottom: 10px;
        padding: 15px 20px;
        max-width: 95%;
    }
    
    .cookie-buttons {
        flex-direction: column;
        gap: 8px;
    }
}

/* 進捗表示 - 中央揃え */
.progress {
    width: 100%;
    max-width: 400px;
    height: 8px;
    background-color: #e9ecef;
    border-radius: 10px;
    overflow: hidden;
    margin: 1.5rem auto;
}

.progress-bar {
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    width: 0%;
    transition: width 0.3s ease;
}

/* エラー・成功メッセージ - 中央揃え */
.alert {
    padding: 15px 25px;
    margin: 1.5rem auto;
    border-radius: 10px;
    font-weight: 500;
    max-width: 500px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.alert-success {
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    color: #155724;
    border-left: 4px solid #28a745;
}

.alert-error {
    background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
    color: #721c24;
    border-left: 4px solid #dc3545;
}

.alert-warning {
    background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
    color: #856404;
    border-left: 4px solid #ffc107;
}

/* アニメーション効果 */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.upload-section, .merge-section {
    animation: fadeInUp 0.6s ease-out;
}
